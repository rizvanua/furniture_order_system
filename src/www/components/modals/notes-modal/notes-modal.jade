#quoteModal.modal.fade.bs-example-modal-sm(tabindex='-1', role='dialog', aria-hidden='true')
	.modal-dialog.modal-sm
		.modal-content
			.modal-header
				h4.modal-title Notes
			.modal-body(style='text-align: center')
				h4 Enter Order Notes
				form(name='newprojectform')
					.form-group(show-errors='')
						textarea.form-control(placeholder='Notes', maxlength='100', data-ng-model='notes')
			.modal-footer
				button.btn.btn-default(type='button', data-dismiss='modal')
					| Close
				button.btn.btn-primary.savemasterquote(type='button', data-ng-click='SaveNotes()')
					| Okay