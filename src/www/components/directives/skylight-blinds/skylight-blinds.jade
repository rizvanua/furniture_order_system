.panel.panel-default.fb-card-body(ng-click='', style='background-color: #ffffff')
  .panel-body
    .row(style='align-items: center;padding-bottom:10px;')
      .col-xs-6
        h2 Current Selection
        p {{blind.blind.Description}} - {{blind.blind.Color}}
      .col-xs-6
        h2 Order code for selected blind
        p
          | {{blind.blind.FBSku}} - {{blind.blind.BlindCode}} - {{blind.blind.BlindType}}
          span.pull-right {{getBlindPrice() | currency}}
      div(ng-repeat='(key,branch) in blindTree')
        hr(style='background-color:#00a7fc;width:100%')
        |                 {{branch[0].Description}}
        img(onerror='this.style.display = "none"', ng-if="order.items[0]!==undefined && (order.items[0].Distributor|manufacturePhoto:Manufacturers) !== ''", ng-src='{{DistributorImagePath}}{{order.items[0].Distributor|manufacturePhoto:Manufacturers}}', alt='{{order.items[0].Distributor}}', style='height:42px;')
        .col-xs-12
          .col-xs-2(ng-class="{'blueBorder' : leaf == blind.blind}", ng-click='setSelectedBlind(leaf)', ng-repeat='leaf in branch', style='padding:10px;text-align:center')
            img(src='{{BlindImagePath + leaf.PhotoName}}', style='width:100%')
            .col-xs-12
              p {{leaf.Color}}
              p {{leaf.BlindCode}}
              p {{leaf.Delivery}}
        .col-xs-12
          .col-xs-3 {{branch[0].Description2}}
          .col-xs-3 {{branch[0].Description3}}
          .col-xs-3 {{branch[0].Description4}}